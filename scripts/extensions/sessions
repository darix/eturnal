get_sessions()
{
    _response="$(erl_rpc 'eturnal_ctl' 'get_sessions' || :)"

    case $_response in
        '{ok,'*)
            echo "$_response" | sed -e 's/{ok, *"\(.*\)"}/\1/' -e 's/~n/\
/g'
            exit 0
            ;;
        '{error,'*)
            echo "$_response" | sed 's/{error, *"\(.*\)"}/\1/' >&2
            exit 1
            ;;
        *)
            echo "Unknown error: '$_response'" >&2
            exit 1
            ;;
    esac
}

if [ $# -ge 1 ] && [ "x$1" = 'xhelp' ]
then
    echo "Usage: $REL_NAME sessions"
    echo "Print the list of currently active TURN sessions."
    exit 0
elif [ $# -eq 0 ]
then
    ping_or_exit
    get_sessions
else
    echo "Usage: $REL_NAME sessions" >&2
    exit 2
fi
